<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@id/layoutRec"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:id="@id/lockscreenIconsLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="bottom"
                android:id="@id/imageViewBat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:src="@drawable/stat_sys_battery_100" />
            <ImageView
                android:gravity="bottom"
                android:id="@id/imageViewCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:src="@drawable/stat_notify_missed_call" />
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:id="@id/lockscreenTimeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="48.0dip"
                    android:textColor="#ff70a8d8"
                    android:gravity="bottom"
                    android:id="@id/textTime33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginBottom="0.0dip"
                    android:text="12:00"
                    android:layout_alignParentRight="true" />
            </LinearLayout>
        </LinearLayout>
        <com.facedklib.FacePreviewGroup
            android:gravity="top"
            android:id="@id/facePreviewR"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <RelativeLayout
        android:gravity="bottom"
        android:id="@id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@id/layoutButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:textColor="#ffe0e0e0"
                android:id="@id/buttonEnterPasswd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="3.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="3.0dip"
                android:text="@string/FRA_UnlockPass" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>